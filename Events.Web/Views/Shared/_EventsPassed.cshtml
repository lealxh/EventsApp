@using Events.Web.Models;
@model PagedData<EventViewModel>

<h4 class="well">Passed Events</h4>

<div class="row">
    @if (Model.Data.Any())
    {
        @Html.DisplayFor(x => x.Data);
    }
    else
    {
        <div class="col-md-4 col-sm-6 col-xs-12">No Events</div>
    }
</div>

@if (Model.Pages > 1)
{
    int previous = Model.CurrentPage - 1;
    int next = Model.CurrentPage + 1;
    String active = "";


    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item"><a class="page-link" href="#" onclick="Passed(@previous)"><<</a></li>
        }
        @for (int i = 1; i <= Model.Pages; i++)
        {
            if (i == Model.CurrentPage)
            {
                <li class="page-item active"><a class="page-link" href="#">@i</a></li>
            }
            else
            {
                <li class="page-item @active"><a class="page-link" onclick="Passed(@i)" href="#">@i</a></li>
            }
        }

        @if (Model.CurrentPage < Model.Pages)
        {
            <li class="page-item"><a class="page-link" href="#" onclick="Passed(@next)">>></a></li>
        }
    </ul>
}

<script type="text/javascript">
    function Passed(page) {
        var req = $.get("/@ViewBag.Controller/PassedEvents/?page=" + page);
        req.done(function (data, status) {
            $("#events-passed").empty().append(data);
        });
    }
</script>